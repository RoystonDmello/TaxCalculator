<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dmello.royston.taxcalculator.MainActivity">

    <TextView
        android:text="Income:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/income" />

    <TextView
        android:text="Policy:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/income"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:id="@+id/policy" />

    <TextView
        android:text="Mediclaim:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/policy"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:id="@+id/mediclaim" />

    <TextView
        android:text="House Loan:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mediclaim"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:id="@+id/loan" />

    <TextView
        android:text="Loan Interest:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:id="@+id/interest" />

    <TextView
        android:text="Education:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interest"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:id="@+id/education" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_toRightOf="@+id/interest"
        android:layout_toEndOf="@+id/interest"
        android:id="@+id/field_policy"
        android:layout_above="@+id/mediclaim"
        android:layout_alignTop="@+id/policy" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/field_income"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/field_policy"
        android:layout_alignStart="@+id/field_policy"
        android:layout_alignBottom="@+id/income" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/field_mediclaim"
        android:layout_above="@+id/loan"
        android:layout_alignLeft="@+id/field_policy"
        android:layout_alignStart="@+id/field_policy"
        android:layout_alignTop="@+id/mediclaim" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_alignTop="@+id/loan"
        android:layout_toRightOf="@+id/interest"
        android:layout_toEndOf="@+id/interest"
        android:id="@+id/field_loan"
        android:layout_above="@+id/interest" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_toRightOf="@+id/interest"
        android:layout_toEndOf="@+id/interest"
        android:id="@+id/field_interest"
        android:layout_alignTop="@+id/interest"
        android:layout_alignBottom="@+id/interest" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_alignTop="@+id/education"
        android:layout_toRightOf="@+id/interest"
        android:layout_toEndOf="@+id/interest"
        android:id="@+id/field_education"
        android:layout_alignBottom="@+id/education" />

    <Button
        android:text="Calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/field_education"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:id="@+id/button" />
</RelativeLayout>
